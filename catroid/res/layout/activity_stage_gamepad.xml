<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamepad_background"
    android:orientation="vertical">



<ImageButton
    android:id="@+id/gamepadButtonA"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_above="@+id/gamepadButtonDown"
    android:layout_toLeftOf="@+id/gamepadButtonB"
    android:layout_toStartOf="@+id/gamepadButtonB"
    android:background="@null"
    android:nestedScrollingEnabled="true"
    android:onClick="handleGamepadButton"
    android:scaleType="fitXY"
    android:src="@drawable/gamepad_button_a_unpressed" />


    <ImageButton
        android:id="@+id/gamepadButtonB"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:nestedScrollingEnabled="false"
        android:onClick="handleGamepadButton"
        android:scaleType="fitXY"
        android:src="@drawable/gamepad_button_b_unpressed" />


    <ImageButton
        android:id="@+id/gamepadButtonUp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/gamepadButtonLeft"
        android:layout_toEndOf="@+id/gamepadButtonLeft"
        android:layout_toRightOf="@+id/gamepadButtonLeft"
        android:background="@null"
        android:onClick="handleGamepadButton"
        android:scaleType="fitXY"
        android:src="@drawable/gamepad_pad_up_unpressed" />


    <ImageButton
        android:id="@+id/gamepadButtonDown"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/gamepadButtonUp"
        android:layout_alignStart="@+id/gamepadButtonUp"
        android:layout_below="@+id/gamepadButtonB"
        android:background="@null"
        android:onClick="handleGamepadButton"
        android:scaleType="fitXY"
        android:src="@drawable/gamepad_pad_down_unpressed" />

    <ImageButton
        android:id="@+id/gamepadButtonRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/gamepadButtonLeft"
        android:layout_toEndOf="@+id/gamepadButtonUp"
        android:layout_toRightOf="@+id/gamepadButtonUp"
        android:background="@null"
        android:onClick="handleGamepadButton"
        android:scaleType="fitXY"
        android:src="@drawable/gamepad_pad_right_unpressed" />

    <ImageButton
        android:id="@+id/gamepadButtonLeft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/gamepadButtonDown"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:background="@null"
        android:onClick="handleGamepadButton"
        android:scaleType="fitXY"
        android:src="@drawable/gamepad_pad_left_unpressed" />

    <ImageButton
        android:id="@+id/gamepadPauseButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:onClick="onPauseButtonPressed"
        android:scaleType="fitXY"
        android:src="@drawable/gamepad_pause_button" />


</RelativeLayout>