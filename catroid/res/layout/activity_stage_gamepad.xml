<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >



<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gamepadAButton"
    android:src="@drawable/gamepad_button_a_unpressed"
    android:layout_alignTop="@+id/gamepadBButton"
    android:layout_centerHorizontal="true"
    android:nestedScrollingEnabled="true"
    android:onClick="handleGamepadAButton" /><ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gamepadBButton"
    android:src="@drawable/gamepad_button_b_unpressed"
    android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/gamepadAButton"
    android:layout_toEndOf="@+id/gamepadAButton"
    android:layout_marginLeft="64dp"
    android:layout_marginStart="64dp" /></RelativeLayout>